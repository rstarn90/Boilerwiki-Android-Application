<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#D4A017">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:overScrollMode="always" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:background="#AF7817">

            <ImageButton
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Home"
                android:background="@drawable/button_outline"
                android:minWidth="56dp"
                android:minHeight="48dp"
                android:src="@drawable/bw_home_h" />

            <ImageButton
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Academics"
                android:background="@drawable/button_outline"
                android:minWidth="56dp"
                android:minHeight="48dp"
                android:src="@drawable/bw_academic" />

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Entertainment"
                android:background="@drawable/button_outline"
                android:minWidth="56dp"
                android:minHeight="48dp"
                android:src="@drawable/bw_entertainment" />

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Food/Drink"
                android:background="@drawable/button_outline"
                android:minWidth="56dp"
                android:minHeight="48dp"
                android:src="@drawable/bw_food" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Housing"
                android:background="@drawable/button_outline"
                android:minWidth="56dp"
                android:minHeight="48dp"
                android:src="@drawable/bw_housing" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="My Profile"
                android:background="@drawable/button_outline"
                android:minWidth="56dp"
                android:minHeight="48dp"
                android:src="@drawable/bw_myprofile" />

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Purdue News"
                android:background="@drawable/button_outline"
                android:minWidth="56dp"
                android:minHeight="48dp"
                android:src="@drawable/bw_news" />
        </LinearLayout>
    </HorizontalScrollView>
    
    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.06" >
        

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView1"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_x="14dp"
            android:layout_y="14dp"
            android:background="#ffffff"
            android:ems="10"
            android:text=" "
            android:textColor="#000000" >

            <requestFocus />
        </AutoCompleteTextView>

        <Button
            android:id="@+id/button8"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="64dp"
            android:layout_height="26dp"
            android:layout_x="238dp"
            android:layout_y="20dp"
            android:background="@drawable/button_outline"
            android:text="search"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="19dp"
            android:layout_y="75dp"
            android:text="Name of Place"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="20dp"
            android:layout_y="102dp"
            android:text="City"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="21dp"
            android:layout_y="125dp"
            android:text="Address"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="18dp"
            android:layout_y="159dp"
            android:text="Type"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="25dp"
            android:layout_y="196dp"
            android:text="Phone number"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="20dp"
            android:layout_y="232dp"
            android:text="Hours of Operation"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="20dp"
            android:layout_y="274dp"
            android:text="Price"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="21dp"
            android:layout_y="300dp"
            android:text="Delivery"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="25dp"
            android:layout_y="328dp"
            android:text="Description"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="26dp"
            android:layout_y="357dp"
            android:text="Favorites"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button21"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_x="192dp"
            android:layout_y="66dp"
            android:text="Add item"
            android:background="@drawable/button_outline"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button22"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_x="196dp"
            android:layout_y="96dp"
            android:text="Rating"
			android:background="@drawable/button_outline"
            android:textColor="#000000" />

    </AbsoluteLayout>

</LinearLayout>