<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#D4A017">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:overScrollMode="always" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:background="#AF7817">

            <ImageButton
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Home"
                android:background="@drawable/button_outline"
                android:minWidth="56dp"
                android:minHeight="48dp"
                android:src="@drawable/bw_home_h" />

            <ImageButton
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Academics"
                android:background="@drawable/button_outline"
                android:minWidth="56dp"
                android:minHeight="48dp"
                android:src="@drawable/bw_academic" />

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Entertainment"
                android:background="@drawable/button_outline"
                android:minWidth="56dp"
                android:minHeight="48dp"
                android:src="@drawable/bw_entertainment" />

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Food/Drink"
                android:background="@drawable/button_outline"
                android:minWidth="56dp"
                android:minHeight="48dp"
                android:src="@drawable/bw_food" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Housing"
                android:background="@drawable/button_outline"
                android:minWidth="56dp"
                android:minHeight="48dp"
                android:src="@drawable/bw_housing" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="My Profile"
                android:background="@drawable/button_outline"
                android:minWidth="56dp"
                android:minHeight="48dp"
                android:src="@drawable/bw_myprofile" />

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Purdue News"
                android:background="@drawable/button_outline"
                android:minWidth="56dp"
                android:minHeight="48dp"
                android:src="@drawable/bw_news" />
        </LinearLayout>
    </HorizontalScrollView>

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.06" >
        
        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_x="2dp"
            android:layout_y="41dp"
            android:textColor="#000000" >

        </ListView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="91dp"
            android:layout_y="10dp"
            android:text="Purdue News"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </AbsoluteLayout>

</LinearLayout>