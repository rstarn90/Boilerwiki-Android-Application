<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#D4A017">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:background="#AF7817">

            <ImageButton
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Home" 
                android:src="@drawable/bw_home" />

            <ImageButton
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Academics"
                android:src="@drawable/bw_academic" />

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Entertainment"
                android:src="@drawable/bw_entertainment" />

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Food/Drink"
                android:src="@drawable/bw_food" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Housing"
                android:src="@drawable/bw_housing" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="My Profile"
                android:src="@drawable/bw_myprofile" />

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Purdue News"
                android:src="@drawable/bw_news" />
        </LinearLayout>
    </HorizontalScrollView>

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.06" >

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView1"
            android:layout_width="133dp"
            android:layout_height="36dp"
            android:layout_x="16dp"
            android:layout_y="16dp"
            android:background="#ffffff"
            android:ems="10"
            android:text=" "
            android:textColor="#000000" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="156dp"
            android:layout_y="12dp"
            android:text="subject" />

        <Button
            android:id="@+id/button9"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="236dp"
            android:layout_y="12dp"
            android:text="search" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="102dp"
            android:layout_y="76dp"
            android:text="My Profile"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/button10"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_x="135dp"
            android:layout_y="110dp"
            android:text="Add item" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_x="94dp"
            android:layout_y="109dp"
            android:src="@android:drawable/btn_star" />
    </AbsoluteLayout>

</LinearLayout>